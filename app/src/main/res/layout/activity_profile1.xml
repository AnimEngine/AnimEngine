<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_view_title_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Welcome"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title_profile"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/text_view_title_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Name"
            android:textSize="20dp"


            />
        <TextView
            android:id="@+id/text_view_name_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Name"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/edit_text_view_name_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Name"
            android:textSize="20dp"
            android:visibility="gone"

            />
    </LinearLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
    />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_first_name_sign_up"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:layout_centerHorizontal="true"
        android:hint="First Name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="textEmailAddress" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_last_name_sign_up"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_input_first_name_sign_up"
        android:layout_marginTop="5sp"
        android:hint="Last Name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="textEmailAddress" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_email_sign_up"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_input_last_name_sign_up"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="textEmailAddress" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_password_sign_up"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_email_sign_up"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:hint="Password" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_input_password_sign_up"

        android:text="Sign up"
        />

    <TextView
        android:id="@+id/text_exist_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_sign_up"
        android:textAlignment="center"

        android:textSize="12sp"

        android:text="have an account already?"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/text_link_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_sign_up"
        android:textAlignment="center"
        android:layout_toRightOf="@id/text_exist_account"
        android:textSize="12sp"

        android:text=" Sign in"
        android:textColor="@color/purple_200"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />




</RelativeLayout>